{
  "name": "insight-hunter-monorepo",
  "private": true,
  "workspaces": ["insight-hunter-frontend", "insight-hunter-backend"],
  "scripts": {
    "setup:env": "cp .env.example .env",
    "build:backend": "npm run build --workspace=insight-hunter-backend",
    "build:frontend": "npm run build --workspace=insight-hunter-frontend",
    "install:all": "npm install",
    "dev:backend": "npm run dev --workspace=insight-hunter-backend",
    "dev:frontend": "npm run dev --workspace=insight-hunter-frontend",
    "build": "npm run build:backend && npm run build:frontend",
    "dev": "npm run dev:backend && npm run dev:frontend",
    "deploy:backend": "wrangler publish ./insight-hunter-backend/dist",
    "deploy:frontend": "wrangler pages publish ./insight-hunter-frontend/dist --insighthunter-v3 insight-hunter-frontend",
    "deploy": "npm run deploy:backend && npm run deploy:frontend"
  }
}
